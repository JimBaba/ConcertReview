<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Club</h1>
    <div class="col-6 offset-3">
        <form action="/clubs" method="POST" novalidate class="validated-form">
            <div class="mb-4">
                <label class="form-label" for="title">Name</label>
                <input class="form-control" type="text" id="title" name="club[title]" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Name muss angegeben werden!</div>
            </div>
            <div class="mb-4">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="club[location]" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Location muss angegeben werden!</div>
            </div>
            <div class="mb-4">
                <label class="form-label" for="price">Eintritt</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¬</span>
                    <input class="form-control" type="text" name="club[price]" id="price" placeholder="0,00" aria-describedby="price-label" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Preis muss angegeben werden!</div>
                </div>
            </div>
            <div class="mb-4">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="club[image]" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Bild URL muss angegeben werden!</div>
            </div>
            <div class="mb-4">
                <label class="form-label" for="description">Beschreibung</label>
                <textarea class="form-control" type="text" id="description" name="club[description]" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Beschreibung muss angegeben werden!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Club</button>
            </div>

        </form>
        <a href="/clubs">All Clubs</a>
    </div>
</div>

